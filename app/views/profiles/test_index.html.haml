.form_wrapper
  =form_tag update_test_profiles_path(),remote:true do 
    = label_tag 'Процент призолова'
    %br
    = text_field_tag :ph_post_percent, @ph_post_percent
    %hr
    - @bw.each do |key,val|
      .bw
        = text_field_tag 'bw['+key+']',val,class:'bw_val'
        = label_tag 'bw['+key+']',key
    %hr
    = button_tag 'Обновить константы', disabled:true
= label_tag :auto_click, 'Авто клик'
= check_box_tag :auto_click, false
//= button_to 'Обновить все', retest_each_profiles_path
%table.profiles  
  - @profiles.each do |profile|
    %tr
      = render profile
